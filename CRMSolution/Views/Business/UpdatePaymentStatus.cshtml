@{
    ViewData["Title"] = "UpdatePolicystatus";
}

<script src="https://centralapi.stariglocal.com/JsMaster/CRMJS/js/Business/UpdatePolicystatus.js"></script>
<div class="page-wrapper open_Main" ng-controller="UpdatePolicystatus">
    <div class="container-fluid">
        <div class="close closeBtn"></div>
        <section class="mngUserfirst">
            <div class="row">
                <div class="col-md-6">
                    <h3>Update Policy Status</h3>
                </div>
            </div>
        </section>
        <div class="row">
            <div class="col-md-2 PadRight">
                <input type="radio" ng-model="rdo" ng-change="ChangeRDO(rdo)" name="policytype" value="Enq" /> Enquiry
                <input type="radio" ng-model="rdo" ng-change="ChangeRDO(rdo)" name="policytype" value="Prop" /> Proposal
            </div>
            <div class="col-md-2 PadRight">
                <div class="">
                    <select ng-model="Comp"
                            ng-options="item.companyName for item in CompList"
                            class="theFiltersBulk theFilters">
                        <option value="">Insurer</option>
                    </select>
                </div>
            </div>
            <div class="col-md-2 PadRight">
                <input type="text" ng-model="FilterText" class="form-control" placeholder="{{PlaceHolder}}" />
            </div>
            <div class="col-md-2 PadRight">
                <input type="button" ng-click="UpdatePolicy()" class="btn btn-primary" value="Update" />
            </div>
        </div>
    </div>
</div>

