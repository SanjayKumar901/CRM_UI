
@{
    ViewData["Title"] = "ManageCertificate";
}
<script src="https://centralapi.stariglocal.com/JsMaster/CRMJS/js/Users/ManageCertificate.js"></script>
    @*<script src="/js/Users/ManageCertificate.js"></script>*@

<div style="width: 78%; padding-top: 5%;padding-left: 17%;" ng-controller="manageCertificate">
    <form>
        <p style="width:100%; overflow:auto;">
            <span style="float:left;">   <b>Upload Certificate Head  </b> : 
            <input type="file" id="HeaderUploader" ng-model-instant onchange="angular.element(this).scope().imageUpload(event)" />

            </span>
            <span style="float:right;text-align:center;">
                <span>
                    Resize image
                </span>
                <br>
                <button type="button" ng-click="DecreaseImage()">
                    <i class="fa fa-caret-up" aria-hidden="true" style="font-size:23px;"></i>
                </button>
                <button type="button" ng-click="IncreaseHeader()">
                    <i class="fa fa-caret-down" aria-hidden="true" style="font-size:23px;"></i>
                </button>
            </span>
        </p>
        <div style="border: 1px solid;">
            <div style="text-align: center;border-bottom: 1px solid;">
                <img id="headerImage" style="width: 100%;height: 250px;" />
            </div>
            <div style='background-size: contain;background-repeat: no-repeat;background-position: center;padding: 0 38px;'>
                <br />
                <p style='font-size: 16px;color: #000;font-family: sans-serif;font-weight: 700; width: 100%;float:left'>Mr./Ms : [POS NAME]   
                <span style='margin-right: 40px;float: right;'>
                    <strong>Date:</strong> [DDMMYYYY]</span> </p>
                <p style='font-size: 16px;color: #000;font-family: sans-serif;font-weight: 700; width: 80%;float:left'>
                    <span style='display: block; width:64%;'>
                        [POS ADDRESSS]
                    </span>
                </p>
                <span style='width:30%'>
                    <img src="https://image.flaticon.com/icons/png/512/21/21294.png" style="width: 136px;height: 155px;">
                </span>
                <div class='content-2'>
                    <br />
                    <p style='font-size: 14px;line-height: 25px;font-weight: 600;font-family: sans-serif;color: #5f5f5f;'>
                        <textarea class="form-control" ng-model="Certificatedescriptop1" rows="3" cols="100"></textarea>
                        <input class="form-control" type="text" ng-model="Companyname" placeholder="CompanyName" style="width: 330px" />
                        <textarea class="form-control" ng-model="Certificatedescriptop2" rows="2" cols="100"></textarea>
                        PAN No : [PANNo]<br />
                        POSP Identification Number : [POS IdentificationNumber]<br />
                        <input class="form-control" type="text" ng-model="Certificatedescriptop3" placeholder="Letter Authorizes" style="width: 550px" />  <input class="form-control" type="text" ng-model="Companyname" placeholder="CompanyName" />
                        <textarea class="form-control" ng-model="Certificatedescriptop5" rows="3" cols="100"></textarea>
                    </p>
                </div>
                <div style='font-size: 14px;padding: 18px 0 10px 0;font-family: sans-serif;padding-bottom: 50px;'><strong><input class="form-control" type="text" ng-model="YourTruly" /></strong></div>
                <div style='font-size: 14px;padding: 18px 0 10px 0;font-family: sans-serif;padding-bottom: 122px;'>
                    <input type="file" id="AuthorizeSign" ng-model-instant onchange="angular.element(this).scope().imageUpload(event)"  />
                </div>
                <div style='font-size: 14px;padding: 18px 0 10px 0;font-family: sans-serif;padding-bottom: 122px;'>
                    <strong><input class="form-control" type="text" ng-model="AuthorisedSignatory" /></strong>
                </div>
                <p style="width:100%;    overflow: hidden;">
                    <span style="float:left;">
                        <b> Upload Certificate Foot</b><input type="file" id="footerUploader" ng-model-instant onchange="angular.element(this).scope().imageUpload(event)" />
                    </span>
                    <span style="float:right; text-align:center">
                        <span>
                            Resize image
                        </span>
                        <br>
                        <button type="button" ng-click="DecreateFooter()">
                            <i class="fa fa-caret-up" aria-hidden="true" style="font-size:23px;"></i>
                        </button>
                        <button type="button" ng-click="IncreaseFooter()">
                            <i class="fa fa-caret-down" aria-hidden="true" style="font-size:23px;"></i>
                        </button>
                    </span>
                </p>
            </div>
            <div style="text-align: center;border-top: 1px solid;">
                <img id="FooterCss" style="width: 100%;height: 200px" />
            </div>
        </div>
        <button class="btn btn-warning" ng-click="SaveData()">Save Data</button>
    </form>
</div>